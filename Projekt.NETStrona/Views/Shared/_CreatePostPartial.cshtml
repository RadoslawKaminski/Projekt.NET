@using Projekt.NETStrona.Models
@model Post
<div style="margin-bottom: 15px; background: rgba(243, 243, 243, 0.65); border-radius: 15px; height:100%; padding:13px">
	@using (Html.BeginForm("CreatePost", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
	{
		@Html.AntiForgeryToken()
		<div class="CreatePostTextArea" style="margin-bottom: 15px;">
			@Html.TextAreaFor(model => model.PostContent, new { @class = "form-control", style = "resize: none; outline: none", placeholder = "Sey something..." })
		</div>
			<div class="CreatePostSubmitButton">
				<input type="submit" value="Submit" class="btn btn-primary" />
			</div>
	}
</div>
