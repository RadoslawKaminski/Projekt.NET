@model Projekt.NETWeb.Models.Post

@{
	ViewBag.Title = "Edit";
	Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Edit post</h2>

@using (Html.BeginForm(Html.BeginForm("EditPost", "Home", FormMethod.Post, new { role = "form" })))
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		@Html.HiddenFor(model => model.PostID)
		@Html.HiddenFor(model => model.DateCreated)
		@Html.HiddenFor(model => model.UserName)
		<div class="form-group">
			<div class="col-md-10">
				@Html.TextAreaFor(model => model.PostContent, new { htmlAttributes = new { @class = "form-control" } })	
			</div>
		</div>
		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Save" class="btn btn-default" />
			</div>
		</div>
	</div>
}
<div>
	@Html.ActionLink("Back to Wall", "Wall")
</div>