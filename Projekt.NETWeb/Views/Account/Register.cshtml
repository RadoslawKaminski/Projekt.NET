@using Projekt.NETWeb.Models
@model RegisterViewModel
@{
	ViewBag.Title = "Register";
	Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div id="loginouter">
	<div id="logininner">
		<form style="display: inline-block;">
			<section>
				@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
				{
					@Html.AntiForgeryToken()
					<h2>Sign up to Primous</h2>
					@Html.ValidationSummary(true, "", new { @class = "text-danger" })
					<div class="form-group" style="height: 34px">
						<div class="col-md-10 loginform" style="height: 34px">
							@Html.TextBoxFor(m => m.Login, new { @class = "form-control logintextbox", placeholder = "Username", style = "margin - bottom: 15px" })
							@Html.ValidationMessageFor(m => m.Login, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group" style="height: 34px">
						<div class="col-md-10 loginform" style="height: 34px">
							@Html.TextBoxFor(m => m.Password, new { @class = "form-control logintextbox", placeholder = "Password", style = "margin-bottom: 15px" })
							@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
						</div>
					</div>
					<div class="form-group" style="height: 34px">
						<div class="col-md-10 loginform" style="height: 34px">
							<input type="button" value="Log in" class="btn btn-default" />
							<input type="submit" value="Sign up" class="btn btn-success" />
						</div>
					</div>
				}
			</section>
		</form>
	</div>
</div>