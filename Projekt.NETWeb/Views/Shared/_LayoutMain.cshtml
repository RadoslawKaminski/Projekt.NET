<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<title>Prymous @ViewBag.Title</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	@Styles.Render("~/Content/css")
</head>
<body style="padding-top: 0px">
	<div class="navbar navbar-default" style="background-color: #e6e6e6; margin-bottom: 0px;">
		<div class="container-fluid">
			<div class="navbar-header">
				<img src="/"/>
			</div>
				@using (Html.BeginForm("AkcjaSzukania", "KontrolerSzukania", FormMethod.Get, new { @style="display:inline"}))
				{
					<input type="text" name="searchtext" placeholder="Search..." maxlength="1000">
					<input type="submit" value="Search">
				}
				@Html.Partial("_LoginPartial")
		</div>
	</div>
		@RenderBody()

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render("~/bundles/modernizr")
	@*textarea auto resize*@
	<script>
					$('textarea').each(function () {
						this.setAttribute('style', 'height:' + (this.scrollHeight) + 'px;overflow-y:hidden;resize:none;');
					}).on('input', function () {
						this.style.height = 'auto';
						this.style.height = (this.scrollHeight) + 'px';
						this.style.resize = 'none'
						this.style.outline = 'none'
					});
	</script>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
